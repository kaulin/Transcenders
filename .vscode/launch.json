{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to User Service (Docker)",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9228,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/workspace",
      "restart": true,
      "autoAttachChildProcesses": true,
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    },
    {
      "name": "Attach to Auth Service (Docker)",
      "type": "node",
