# Base image
FROM node:22-alpine AS base
WORKDIR /workspace
USER root

RUN apk add --no-cache sqlite

# Development stage
FROM base AS development

# Copy all package.json files first
COPY package.json package-lock.json ./
COPY services/gateway-service/package.json ./services/gateway-service/
# Copy all the workspace-packages
COPY packages/ ./packages/

RUN npm ci

#copy all source files
COPY services/gateway-service/ ./services/gateway-service/

WORKDIR /workspace/services/gateway-service

ENV NODE_ENV=development
EXPOSE 4000 9230
CMD ["npm", "run", "dev"]

# Production stage
FROM base AS production

COPY package.json package-lock.json ./
COPY packages/ ./packages/
COPY services/gateway-service/package.json ./services/gateway-service/

RUN npm ci --omit=dev

COPY services/gateway-service/ ./services/gateway-service/
RUN npm run build --workspace=gateway-service

WORKDIR /workspace/services/gateway-service

VOLUME ["/workspace/services/gateway-service/data"]
EXPOSE 3000
ENV NODE_ENV=production
CMD ["node", "dist/server.js"]