{
  "name": "@transcenders/fastify-server",
  "description": "Helper for setting up fastify server for Transcenders",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "dev:package": "tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "build:package": "tsc",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@transcenders/api-client": "*",
    "@transcenders/contracts": "*",
    "@transcenders/server-utils": "*",
    "fastify": "^5.5.0",
    "fastify-graceful-shutdown": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "pino-pretty": "^13.1.1",
    "typescript": "~5.9.2"
  }
}
